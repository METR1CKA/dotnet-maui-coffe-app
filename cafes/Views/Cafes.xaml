                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand"
                            HeightRequest="120"
                            WidthRequest="125"
                            StrokeThickness="0.5"
                            Stroke="#202020"
                            Background="{AppThemeBinding Light=White, Dark=#202020}">
                        <Image HorizontalOptions="FillAndExpand"
                               VerticalOptions="FillAndExpand"
                               Source="coffe_1.jpg"
                               Aspect="Fill"
                               HeightRequest="120"/>
